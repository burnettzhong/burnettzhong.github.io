@import "variables"
@import "underline"

// https://github.com/chriskempson/tomorrow-theme
//highlight-background = #2d2d2d
highlight-background = backgroundColor
highlight-current-line = #393939
highlight-selection = #515151
highlight-foreground = #333
highlight-comment = #999999
highlight-red = #f2777a
highlight-orange = saturation(#f99157, 100%)
highlight-yellow = #ffcc66
highlight-green = saturation(#99cc99, 50%)
highlight-aqua = #66cccc
highlight-blue = #6699cc
highlight-purple = saturation(#cc99cc, 75%)
color-border = lighten(greyishBlue, 60%)
code-background = darken(backgroundColor, 5%)

$code-block
  background: code-background
  padding: 15px
  overflow: auto
  color: highlight-foreground
  a
	  link-underline(code-background, mainColor, mainColor)

$line-numbers
  color: #666
  font-size: 0.85em

code
	background-color: code-background
	border-radius: 0.2em


.highlight .line.marked
  background-color: darken(code-background, 10%)

//HACK this is so super hacky but it gets the numbers to align.
.highlight .line
	min-height: 22px

article
  pre, code
	  font-family: fontsMono
  code
    background: color-background
    text-shadow: 0 1px #fff
    padding: 0 0.3em
  pre
    @extend $code-block
    code
      background: none
      text-shadow: none
      padding: 0
  .highlight
    @extend $code-block
    pre
      border: none
      margin: 0
      padding: 0
    table
      margin: 0
      width: auto
    td
      border: none
      padding: 0
    figcaption
      font-size: 0.85em
      color: highlight-comment
      line-height: 1em
      margin-bottom: 1em
      display: flex
      flex-direction: row
      justify-content: space-between
    .gutter pre
      @extend $line-numbers
      text-align: right
      padding-right: 20px
  .gist
    border-style: solid
    border-color: color-border
    border-width: 1px 0
    background: highlight-background
    .gist-file
      border: none
      font-family: font-mono
      margin: 0
      .gist-data
        background: none
        border: none
        .line-numbers
          @extend $line-numbers
          background: none
          border: none
          padding: 0 20px 0 0
        .line-data
          padding: 0 !important
      .highlight
        margin: 0
        padding: 0
        border: none
      .gist-meta
        background: highlight-background
        color: highlight-comment
        font: 0.85em font-sans
        text-shadow: 0 0
        padding: 0
        margin-top: 1em
        margin-left: article-padding

pre
  .comment
  .title
    color: highlight-comment
  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo
    color: #a626a4
  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
    color: #986801
  .class
  .ruby .class .title
  .css .rules .attribute
    color: #50a14f
  .string
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
    color: #50a14f
  .css .hexcolor
    color: highlight-aqua
  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color: #a626a4
  .keyword
  .javascript .function
    color: #a626a4
